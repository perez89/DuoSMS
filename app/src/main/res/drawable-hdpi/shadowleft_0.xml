<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>

            <!-- SHADOW LAYER -->
            <item android:bottom="4dp" android:right="4dp"><shape>
                    <solid android:color="#a5a5a5" />

                    <corners android:radius="2dip" />
                </shape></item>
            <!-- CONTENT LAYER -->
            <item android:top="2dp" android:left="2dp" ><shape>
                    <solid android:color="#e7e5e5" />

                    <padding android:bottom="10dp" android:left="7dp" android:right="10dp" android:top="7dp" />

                    <corners android:radius="2dip" />
                </shape></item>
        </layer-list></item>

</selector>