<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:top="4dp" android:left="4dp">
                <shape>
                    <solid android:color="#007fc1" />
                    <corners android:radius="2dip"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <item android:bottom="2dp" android:right="2dp">
                <shape>
                     <padding android:bottom="10dp" android:left="7dp" android:right="10dp" android:top="7dp" />
                    <solid android:color="#19b1ff" />
                    <corners android:radius="2dip"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>